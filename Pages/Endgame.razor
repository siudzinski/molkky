@page "/endgame"

<PageTitle>Endgame</PageTitle>

<MudContainer Class="mt-16 px-8" MaxWidth="MaxWidth.False">
    <MudGrid>
        <MudItem xs="2">
            <MudIcon Icon="@Icons.Material.Filled.EmojiEvents" Size="Size.Large" Style="color: gold;" />
        </MudItem>
        <MudItem xs="8">
            <MudText Align="Align.Center" Typo="Typo.h5">Tomasz won the game!</MudText>
        </MudItem>
        <MudItem xs="2">
            <MudIcon Icon="@Icons.Material.Filled.EmojiEvents" Size="Size.Large" Style="color: gold;" />
        </MudItem>
        <MudItem xs="12">
            <MudChart ChartType="ChartType.Line" ChartSeries="@Series" XAxisLabels="@XAxisLabels" ChartOptions="@Options" Width="100%" CanHideSeries/>
        </MudItem>
        <MudItem xs="12">
            <MudButton Variant="Variant.Filled" FullWidth="true">Play again</MudButton>
        </MudItem>
        <MudItem xs="12">
            <MudButton Variant="Variant.Filled" FullWidth="true">New game</MudButton>
        </MudItem>
    </MudGrid>
</MudContainer>

@code {
    public List<ChartSeries> Series = new List<ChartSeries>();
    public string[] XAxisLabels = {"1", "2", "3", "4", "5", "6" };
    public ChartOptions Options = new ChartOptions() { YAxisTicks = 1 };

    protected override void OnInitialized()
    {
        base.OnInitialized();

        var players = new List<ChartSeries>();
        players.Add(new ChartSeries { Name = "Tomasz", Data = new double[] { 2, 14, 26, 38, 40, 50 } });
        players.Add(new ChartSeries { Name = "Adam", Data = new double[] { 12, 24, 36, 48, 25, 25 } });
        players.Add(new ChartSeries { Name = "Iza", Data = new double[] { 12, 12, 12, 12 } });

        Series = players;
    }
}