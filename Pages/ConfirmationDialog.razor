@inherits TranslatableComponentBase

<MudDialog>
    <DialogContent>
        <MudText Typo="Typo.h6" Align="Align.Center">@Translator.Get("AddScoreLabel") @Score?</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">@Translator.Get("CancelButton")</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Submit">@Translator.Get("ConfirmButton")</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance? MudDialog { get; set; }

    [Parameter] public int Score { get; set; }

    void Submit() => MudDialog?.Close(DialogResult.Ok(true));
    void Cancel() => MudDialog?.Cancel();
}
